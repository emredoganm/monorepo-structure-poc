{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "sourceRoot": ".",
    "strict": true,
    "target": "es6"
  },
  "include": ["*.ts", "*.json"],
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
